{
  "manifest_version": 2,

  "name": "ScreenTime",
  "description": "Check your screen time",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png"
  },
  "background": {
    "scripts": [
      "Method.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ]
}